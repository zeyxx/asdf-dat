# ASDF DAT Environment Configuration
# Copy this file to .env and update with your values

# Wallet Configuration
# Path to your Solana wallet JSON file
WALLET_PATH=./wallet.json

# Program Configuration
# Program ID after deployment (update after anchor deploy)
PROGRAM_ID=ASDFdatBuybackBurnXXXXXXXXXXXXXXXXXXXXXXXXX

# Network Configuration
# Options: mainnet, devnet, testnet
NETWORK=mainnet

# RPC URL (optional - defaults to public endpoints)
# For better performance, use a private RPC like Helius, QuickNode, etc.
RPC_URL=https://api.mainnet-beta.solana.com

# Logging Configuration
# Options: debug, info, warn, error
LOG_LEVEL=info

# Log file path (optional)
LOG_FILE=./logs/dat-bot.log

# Debug mode (shows additional output)
DEBUG=false

# Monitoring Configuration (optional)
# Port for metrics server
METRICS_PORT=3000

# Alert Configuration (optional)
# Webhook URL for alerts (Discord, Slack, etc.)
ALERT_WEBHOOK_URL=

# Email for critical alerts
ALERT_EMAIL=

# Performance Tuning (optional)
# Maximum number of retries for failed transactions
MAX_RETRIES=3

# Delay between retries in milliseconds
RETRY_DELAY=1000

# Transaction confirmation commitment level
# Options: processed, confirmed, finalized
COMMITMENT_LEVEL=confirmed

# Gas Configuration (optional)
# Maximum priority fee in microlamports
MAX_PRIORITY_FEE=1000

# Compute unit limit
COMPUTE_UNIT_LIMIT=200000

# Development Settings (optional)
# Enable development mode features
NODE_ENV=production

# Skip confirmation prompts (use with caution)
SKIP_CONFIRMATIONS=false

# Dry run mode (simulates transactions without executing)
DRY_RUN=false

# Monitoring Dashboard (optional)
# Enable web dashboard
ENABLE_DASHBOARD=false

# Dashboard port
DASHBOARD_PORT=3001

# Dashboard authentication (if enabled)
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=changeme

# External Services (optional)
# Price feed API (for accurate token pricing)
PRICE_API_URL=

# Price API key
PRICE_API_KEY=

# Database Configuration (optional - for persistent storage)
# Database URL (PostgreSQL, MongoDB, etc.)
DATABASE_URL=

# Redis URL (for caching)
REDIS_URL=

# Security Settings
# Enable rate limiting
ENABLE_RATE_LIMIT=true

# Maximum requests per minute
RATE_LIMIT_MAX=60

# IP whitelist (comma-separated)
IP_WHITELIST=

# CORS allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Backup Configuration (optional)
# Enable automatic backups
ENABLE_BACKUPS=false

# Backup directory
BACKUP_DIR=./backups

# Backup interval in hours
BACKUP_INTERVAL=24

# Feature Flags (optional)
# Enable experimental features
ENABLE_EXPERIMENTAL=false

# Enable auto-recovery on failures
ENABLE_AUTO_RECOVERY=true

# Enable performance profiling
ENABLE_PROFILING=false

# Custom Settings
# Add any custom environment variables below
# CUSTOM_VAR=value
