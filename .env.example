# =============================================================================
# ASDF-DAT Environment Configuration
# =============================================================================
# Copy this file to .env.local for your secrets (NEVER commit .env.local)
# =============================================================================

# Program Configuration
PROGRAM_ID=ASDFc5hkEM2MF8mrAAtCPieV6x6h1B5BwjgztFt7Xbui

# Network Configuration
NETWORK=devnet  # devnet | mainnet

# =============================================================================
# RPC Configuration (Required)
# =============================================================================
# Get API key from https://dashboard.helius.dev/
HELIUS_API_KEY=your-helius-api-key-here

# Devnet RPC (with Helius for better rate limits)
DEVNET_RPC_URL=https://devnet.helius-rpc.com/?api-key=${HELIUS_API_KEY}

# Mainnet RPC (Required for production)
MAINNET_RPC_URL=https://mainnet.helius-rpc.com/?api-key=${HELIUS_API_KEY}

# Fallback RPC (Required for mainnet - used if primary fails)
RPC_FALLBACK_URL=https://api.mainnet-beta.solana.com

# =============================================================================
# Wallet Configuration
# =============================================================================
# Path to wallet JSON file (use .env.local for actual path)
WALLET_PATH=./wallet.json

# =============================================================================
# Operating Parameters
# =============================================================================
MIN_FEES_TO_CLAIM=10000000        # 0.01 SOL minimum to claim
MAX_FEES_PER_CYCLE=1000000000     # 1 SOL max per cycle
SLIPPAGE_BPS=500                   # 5% slippage tolerance
MIN_CYCLE_INTERVAL=60              # 60 seconds between cycles

# =============================================================================
# Monitoring & Logging
# =============================================================================
LOG_LEVEL=info                     # debug | info | warn | error
VERBOSE=false                      # Enable verbose daemon output

# =============================================================================
# Alerting Configuration
# =============================================================================
# Discord or Slack webhook URL for alerts
WEBHOOK_URL=                       # e.g., https://discord.com/api/webhooks/...
WEBHOOK_TYPE=auto                  # auto | discord | slack (auto-detect from URL)

# Enable/disable alerting
ALERT_ENABLED=true

# Alert thresholds
ALERT_ERROR_RATE_THRESHOLD=10      # Error rate % to trigger alert (default: 10)
ALERT_POLL_LAG_MULTIPLIER=2        # Poll lag multiplier to trigger alert (default: 2)
ALERT_PENDING_STUCK_MINUTES=30     # Minutes before "stuck fees" alert (default: 30)
ALERT_FAILED_CYCLES_MAX=3          # Consecutive failures before critical alert (default: 3)

# Rate limiting (prevent alert spam)
ALERT_RATE_LIMIT_WINDOW=60000      # Rate limit window in ms (default: 1 minute)
ALERT_RATE_LIMIT_MAX=5             # Max alerts per window (default: 5)
ALERT_COOLDOWN_MS=300000           # Per-alert-type cooldown in ms (default: 5 minutes)

# =============================================================================
# Metrics Persistence Configuration
# =============================================================================
# Enable/disable metrics persistence to disk
METRICS_ENABLED=true

# Directory for storing metric snapshots
METRICS_DATA_DIR=./data/metrics

# Snapshot interval in milliseconds (default: 5 minutes)
METRICS_SNAPSHOT_INTERVAL=300000

# How long to keep historical data (default: 30 days)
METRICS_RETENTION_DAYS=30

# =============================================================================
# Bot Configuration
# =============================================================================
ENABLE_BOT=false
RANDOM_EXECUTION=true

# =============================================================================
# Grafana Configuration (for monitoring stack)
# =============================================================================
GRAFANA_PASSWORD=asdf-admin        # Grafana admin password

# =============================================================================
# Security (Mainnet only)
# =============================================================================
# KEY_ENCRYPTION_KEY=             # Required for mainnet (encrypt wallet)