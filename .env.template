# ASDF Burn Engine - Environment Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# RPC ENDPOINTS
# =============================================================================

# Helius API Key (Required for production)
# Get yours at: https://helius.dev
HELIUS_API_KEY=your_helius_api_key_here

# Devnet RPC URL (auto-constructed from API key)
HELIUS_DEVNET_RPC=https://devnet.helius-rpc.com/?api-key=${HELIUS_API_KEY}

# Mainnet RPC URL (auto-constructed from API key)
HELIUS_MAINNET_RPC=https://mainnet.helius-rpc.com/?api-key=${HELIUS_API_KEY}

# QuickNode RPC (Recommended - fallback for production)
# Get yours at: https://quicknode.com
# Example: https://your-endpoint.quiknode.pro/YOUR_TOKEN/
QUICKNODE_RPC=

# Triton RPC (Optional - additional fallback)
# Get yours at: https://triton.one
TRITON_RPC=

# Generic fallback RPC (Optional)
RPC_FALLBACK_URL=

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================

# Devnet wallet path (relative to project root)
DEVNET_WALLET=devnet-wallet.json

# Mainnet wallet path (relative to project root)
MAINNET_WALLET=mainnet-wallet.json

# =============================================================================
# TOKEN CONFIGURATION
# =============================================================================

# Creator public key (required for token discovery)
# This is the wallet that created your tokens
CREATOR=

# =============================================================================
# MONITORING & ALERTING (Optional)
# =============================================================================

# Grafana Cloud Metrics URL
GRAFANA_METRICS_URL=

# PagerDuty Integration Key
PAGERDUTY_KEY=

# Slack Webhook URL
SLACK_WEBHOOK_URL=

# =============================================================================
# ADVANCED CONFIGURATION (Optional)
# =============================================================================

# Network (devnet or mainnet)
NETWORK=devnet

# Enable debug logging
DEBUG=false

# Node environment
NODE_ENV=development
